#!name=MGTV
#!desc=MGTV

[URL Rewrite]
#播放页开通提示移除
http://vip.bz.mgtv.com/client/dynamic_entry - reject

[Script]
http-request ^http[s]?:\/\/mobile\.api\.mgtv\.com\/v[0-9]\/(playlist|video\/album|video\/relative|video\/list).*$ script-path=https://raw.githubusercontent.com/Yunxingz/Rewrite/main/mgtv1.js, timeout=60
http-request ^http[s]?:\/\/mobile\.api\.mgtv\.com\/v[0-9][0-9]\/(playlist|video\/album|video\/relative|video\/list).*$ script-path=https://raw.githubusercontent.com/Yunxingz/Rewrite/main/mgtv1.js, timeout=60

http-request https://mobile-stream.api.mgtv.com/v1/video/source? script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, timeout=60

http-response https://nuc.api.mgtv.com/GetUserInfo script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, requires-body=true, max-size=-1, timeout=60

http-response https://mobile-stream.api.mgtv.com/v1/video/source script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, requires-body=true, max-size=-1, timeout=60

#港区
http-request ^https://mobile.api.mgtv.com/v8/video/getSource script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, timeout=60
http-request ^https://mobile.api.mgtv.com/v9/video/getSource script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, timeout=60

http-request https://pad.api.mgtv.com/v8/video/getSource script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, timeout=60
#mac
http-request https://pcc.api.mgtv.com/video/getSource script-path=https://raw.githubusercontent.com/rjansng/js/master/Scripts/MGTV.js, timeout=60

[MITM]
hostname = *.mgtv.com, pad.api.mgtv.com, pcc.api.mgtv.com